<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              CanBeDismissedByTappingOutsideOfPopup="False"
               HorizontalOptions="Center"
               VerticalOptions="Center"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CommunityPopup.PopupPage">
        <VerticalStackLayout Spacing="5">
            <Image Source="dotnet_bot" HeightRequest="50" WidthRequest="50" />
            <Label  Text="Content Title" FontSize="28" FontAttributes="Bold" />
            <Label  Text="Content Description" FontSize="18"  />
            <HorizontalStackLayout Spacing="10">
                <Button Text="Yes"  x:Name="btnYes" Clicked="btnYes_Clicked"/>
                <Button Text="No" x:Name="btnNo" Clicked="btnNo_Clicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    
</toolkit:Popup>